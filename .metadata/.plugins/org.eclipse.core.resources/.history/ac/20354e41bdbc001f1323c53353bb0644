                         <small>Manage Hotels</small>
                    </h1>
                </div>
            </div>

            <!-- Container pour le bouton Add Item -->
            <div class="add-item-container">
                <a href="javascript:void(0);" class="btn" onclick="showAddItemAlert()">Add Item</a>
            </div>

            <!-- Table pour afficher les hôtels -->
            <div class="panel">
                <div class="panel-heading">
                    Hotels List
                </div>
                <div class="panel-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>City</th>
                                <th>Stars</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%
                                String url = "jdbc:mysql://localhost:3306/hotel_management";
                                String user = "root";
                                String password = "triki";
                                Connection conn = null;
                                PreparedStatement stmt = null;
                                ResultSet rs = null;

                                String searchParam = request.getParameter("search");
                                String query;

                                try {
                                    Class.forName("com.mysql.cj.jdbc.Driver");
                                    conn = DriverManager.getConnection(url, user, password);

                                    if (searchParam != null && !searchParam.trim().isEmpty()) {
                                        query = "SELECT * FROM Hotel WHERE name LIKE ? OR city LIKE ?";
                                        stmt = conn.prepareStatement(query);
                                        stmt.setString(1, "%" + searchParam + "%");
                                        stmt.setString(2, "%" + searchParam + "%");
                                    } else {
                                        query = "SELECT * FROM Hotel";
                                        stmt = conn.prepareStatement(query);
                                    }

                                    rs = stmt.executeQuery();

                                    while (rs.next()) {
                                        int id = rs.getInt("id");
                                        String name = rs.getString("name");
                                        String city = rs.getString("city");
                                        int stars = rs.getInt("stars");
                                        String description = rs.getString("description");
                            %>
                            <tr>
                                <td><%= id %></td>
                                <td><%= name %></td>
                                <td><%= city %></td>
                                <td><%= stars %></td>
                                <td><%= description %></td>
                                <td>
                                   <div class="actions-btns">
                                    <a href="editHotel.jsp?id=<%= id %>" class="btn">Edit</a>
                                    <a href="deleteHotel.jsp?id=<%= id %>" class="btn">Delete</a>
                                    </div>
                                </td>
                            </tr>
                            <%
                                    }
                                } catch (Exception e) {
                                    e.printStackTrace();
                                } finally {
                                    if (rs != null) rs.close();
                                    if (stmt != null) stmt.close();
                                    if (conn != null) conn.close();
                                }
                            %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script>
        function showAddItemAlert() {
            alert("Please fill out the form to add a new item.");
            window.location.href = 'addItem.jsp';  // Redirection vers la page d'ajout
        }
    </script>

