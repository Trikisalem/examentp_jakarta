<%
    // Simuler les paiements à l'aide d'une liste
    
    // Classe interne pour simuler un paiement
    class Payment {
        private int id;
        private String title;
        private String fname;
        private String lname;
        private String roomType;
        private String bedType;
        private String checkIn;
        private String checkOut;
        private int noOfRooms;
        private String mealType;
        private double roomRent;
        private double bedRent;
        private double mealCost;
        private double total;

        public Payment(int id, String title, String fname, String lname, String roomType, String bedType, 
                        String checkIn, String checkOut, int noOfRooms, String mealType, 
                        double roomRent, double bedRent, double mealCost, double total) {
            this.id = id;
            this.title = title;
            this.fname = fname;
            this.lname = lname;
            this.roomType = roomType;
            this.bedType = bedType;
            this.checkIn = checkIn;
            this.checkOut = checkOut;
            this.noOfRooms = noOfRooms;
            this.mealType = mealType;
            this.roomRent = roomRent;
            this.bedRent = bedRent;
            this.mealCost = mealCost;
            this.total = total;
        }

        public int getId() {
            return id;
        }

        public String getTitle() {
            return title;
        }

        public String getFname() {
            return fname;
        }

        public String getLname() {
            return lname;
        }

        public String getRoomType() {
            return roomType;
        }

        public String getBedType() {
            return bedType;
        }

        public String getCheckIn() {
            return checkIn;
        }

        public String getCheckOut() {
            return checkOut;
        }

        public int getNoOfRooms() {
            return noOfRooms;
        }

        public String getMealType() {
            return mealType;
        }

        public double getRoomRent() {
            return roomRent;
        }

        public double getBedRent() {
            return bedRent;
        }

        public double getMealCost() {
            return mealCost;
        }

        public double getTotal() {
            return total;
        }
    }
%>

